{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src",
    ],
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts",
  ]
}